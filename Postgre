            console.log(data)
            select = document.getElementById('tableName');
            for (var i = 0; i < data.length; i++) {
                var opt = document.createElement('option');
                opt.value = data[i].name;
                opt.innerHTML = data[i].name;
                select.appendChild(opt);
            }
